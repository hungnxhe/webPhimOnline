
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Active Tài Khoản</title>
    <style>
        body {
            background-image: url('../../Assets/Admin/css/images/body-bg.gif');
        }
    </style>
</head>
<body>
    <div>
        <h1 style="text-align : center; color:antiquewhite;">
            Active Account
        </h1>
        <div style="display: flex; margin-left: 350px;">
            <div>

                <img src="~/Assets/images/register.jpg" alt="Alternate Text" style="height:600px; width:400px;" />
            </div>
            <div style="height:600px ;width:auto; background-color:black;">
                <form action="/Active/activeAccount" method="post">
                    <div style="background-color:darkgrey;height: 500px;width : 400px; margin:50px 20px ; border :3px solid black; border-radius: 15px;">
                        <div style="margin-left:20px;margin-top:20px;">
                            <table>
                                <tr style="height:50px;">
                                    <th>UserName:</th>
                                    <td>
                                        <input style="margin-left:20px;height: auto;width : 200px;" name="user"value="@ViewBag.user"/>
                                    </td>
                                </tr>
                                <tr style="height:50px;">
                                    <th>code:</th>
                                    <td>
                                        <input style="margin-left:20px;height: auto;width : 200px;" name="code" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <button type="submit" style="margin-left: 90px; margin-top:30px;">Kích Hoạt</button>
                        <a href="/Login/Login">Đăng Nhập Ngay</a>
                        <div>
                            <p style="color: red; margin-left:30px; margin-top:30px;font-size:25px;">
                                @ViewBag.mess2
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>
</html>
