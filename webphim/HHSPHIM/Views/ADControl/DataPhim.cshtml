@model DatabaseProvide.Phim

@using (Ajax.BeginForm("addTapMoi", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "data", InsertionMode = InsertionMode.Replace }))
{
    <div class="form-row">
        <div class="col">
            <div class="form-group"><label for="username"><strong>ID Phim</strong></label><input class="form-control" type="text" id="username" name="idp" value="@Model.IDP" readonly></div>
            <div class="form-group"><label for="username"><strong>Tên Phim</strong></label><input class="form-control" type="text" id="username" name="name" value="@Model.TenPhim" readonly></div>
        </div>
        <div class="col">
            <div class="form-group"><label for="email"><strong>Đường Dẫn</strong></label><input class="form-control" type="text" id="email" placeholder="Link From GGDrive" name="link"></div>
            <p style="color:red">@ViewBag.messeage</p>
        </div>
    </div>
    <button class="btn btn-primary btn-sm" type="submit">Save</button>
}