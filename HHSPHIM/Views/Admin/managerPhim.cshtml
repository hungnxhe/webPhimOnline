
@{
    Layout = null;
}
@model List<DatabaseProvide.Phim>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Manager Phim</title>
    <style>
        body {
            background-image: url('../../Assets/Admin/css/images/body-bg.gif');
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div>
        <h1 style="text-align : center; color:antiquewhite;">
            Manager Phim
        </h1>
        <div style="margin-left:150px;">
            <a href="/Home/Index">Back to Home page</a>
        </div>
        <div style="background-color:darkgrey;height: auto;width : 1500px; margin :20px auto; border :3px solid green; border-radius: 20px; display:flex;">
            <div>
                <table style="width:400px;margin-left:10px;margin-top:5px;">
                    <tr>
                        <th>IDP</th>
                        <th>TênPhim</th>
                        <th>ThểLoại</th>
                        <th>Action</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @using (Ajax.BeginForm("phimdetail", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "detailphim", InsertionMode = InsertionMode.Replace }))
                                {
                                    <input type="submit" value="@item.IDP" name="IDPForCm" />
                                }
                            </td>
                            <td>@item.TenPhim</td>
                            <td>@item.TheLoai</td>                           
                            <td>
                                <form action="/Admin/deletePhim" method="post">
                                    <button type="submit" value="@item.IDP" name="IDPForCm">Delete</button>                                   
                                </form>
                            </td>
                            
                        </tr>
                    }
                </table>
            </div>
            <div id="detailphim" style="margin-left:10px;">
                <img src="~/Assets/images/meme3.png" style="height:auto; width:1050px; margin-top:20px;"/>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</body>
</html>
