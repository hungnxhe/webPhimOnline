
@{
    Layout = null;
}
@model DatabaseProvide.Phim
<html>
<head>
    <title>SSh-Film</title>
    <link rel="shortcut icon" type="image/ico" href="~/Assets/Admin/css/images/logo01.png" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Assets/Admin/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Assets/Admin/js/jquery-1.4.2.min.js" type="text/javascript"></script>
    <script src="~/Assets/Admin/js/jquery-func.js" type="text/javascript"></script>
    <!--[if IE 6]><link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" /><![endif]-->
</head>
<body>
    @{ if (System.Web.HttpContext.Current.Session["login1"] != null)
        {
            if (System.Web.HttpContext.Current.Session["chucvu"].Equals("1") == true)
            {
                <div style="position: fixed;
                 margin-top: 150px;
                 margin-left: 30px;
                 height: 270px;
                 width: 200px;
                 border: 3px solid red;
                 border-radius: 15px;">
                    <div style="background-color: dimgrey;border-radius: 10px 10px 0 0;">
                        <div style="font-size:20px; text-align:center;color:darkorange;">
                            Manager for Admin
                        </div>
                    </div>
                    <div style="margin-top:10px ;margin-left:10px;">
                        <a href="/Admin/AddPhim" style="font-size: 18px;">Add Phim</a><br><br />
                        <a href="/Admin/managerPhim" style="font-size: 18px;">Edit Or Remove Film</a><br><br />
                        <a href="/Admin/AddPhim" style="font-size: 18px;">Manager News(coming soon)</a><br><br />
                        <a href="/Admin/blockAccount" style="font-size: 18px;">Manager Account</a><br><br />
                        <a href="/Admin/managerComment" style="font-size: 18px;">Manager Comment</a><br><br />
                    </div>
                </div>
            }
        }
    }
    <!-- START PAGE SOURCE -->
    <div style="display: flex;">
        <div id="shell">
            <div id="header">
                <h1 id="logo"><a href="/Home/Index">SSH-film</a></h1>
                <div class="social">
                    <span>FOLLOW US ON:</span>
                    <ul>
                        <li><a class="twitter" href="#">twitter</a></li>
                        <li><a class="facebook" href="#">facebook</a></li>
                        <li><a class="vimeo" href="#">vimeo</a></li>
                        <li><a class="rss" href="#">rss</a></li>
                    </ul>
                </div>
                <div id="navigation">
                    <form action="/Home/LogoutSystem" method="POST">
                        <ul>
                            @if (System.Web.HttpContext.Current.Session["login1"] != null)
                            {
                                <li><a href="#">Hellu : @((Session["login1"] as DatabaseProvide.Account).Username)</a></li>
                                <li><button>LOGOUT</button></li>
                                <li><a href="/Favorite/Myfavorite">MY FAVORITE</a></li>
                                <li><a href="/News/NewPage">COMING SOON</a></li>
                                <li><a href="mailto:hung6nuh@gmail.com">CONTACT</a></li>

                            }
                            else
                            {
                                <li><a href="/Login/Login">LOGIN</a></li>
                                <li><a href="/Register/Register">REGISTER</a></li>
                                <li><a href="/News/NewPage">COMING SOON</a></li>
                                <li><a href="#">CONTACT</a></li>
                            }
                        </ul>
                    </form>
                </div>
                <div id="sub-navigation">
                    <ul>
                        <li><a href="#">SHOW ALL</a></li>
                        <li><a href="#">Top view</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Hanh Dong">Hành Động</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Vo Thuat">Võ Thuật</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=He Huoc">Hề Hước</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Co Trang">Cổ Trang</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Kinh Di">Kinh Dị</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Tinh Cam">Tình Củm</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Phim Bo">Phim Bộ</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Phim tai lieu">Phim Tài Liệu</a></li>
                        <li><a href="/TheLoai/TheLoai?txttheloai=Hoat Hinh">Hoạt Hình</a></li>
                    </ul>
                    <div id="search" style="margin-top:50px;">
                        <form action="/Search/ResultSearch" accept-charset="utf-8">
                            <label for="search-field">SEARCH</label>
                            <input type="text" name="txt" value="Enter search here" id="search-field" class="blink search-field" />
                            <input type="submit" value="GO!" class="search-button" />
                        </form>
                    </div>
                </div>
            </div>
            <div id="main">
                <div id="content">
                    <div class="box" style="display: Flex; margin-top: 100px">
                        <div style="border: 6px solid cadetblue;border-radius: 15px;height: 600px; width: 500px;">
                            <img src="@Model.Poster" alt="" style="height: 550px; width: 500px;border-radius:10px 10px 0 0;" />

                            <div style="display: Flex;">
                                @if (System.Web.HttpContext.Current.Session["login1"] != null)
                                {
                                    if (@ViewBag.check == true)
                                    {
                                        <button style="height: 50px;width: 166px;background-color: #d91d2a;border-radius:10px 10px 10px 10px;"><a href="/Watch/WatchPage?id=@Model.IDP&tap=1"><p style="font-size:23px;">Watch Movie</p></a></button>
                                        <button style="height: 50px;width: 168px;background-color: blueviolet;border-radius:10px 10px 10px 10px;"><a><p style="font-size:23px;">Download</p></a></button>
                                        <form action="/Favorite/Addfavo" method="post">
                                            <button style="height: 50px;width: 166px;background-color: darkgreen;border-radius:10px 10px 10px 10px;"><a><p style="font-size:23px;">Add To Favorite</p></a></button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button style="height: 50px;width:250px;background-color: #d91d2a;border-radius:10px 10px 10px 10px;"><a href="/Watch/WatchPage?id=@Model.IDP&tap=1"><p style="font-size:23px;">Watch Movie</p></a></button>
                                        <button style="height: 50px;width: 250px;background-color: blueviolet;border-radius:10px 10px 10px 10px;"><a><p style="font-size:23px;">Download</p></a></button>
                                    }
                                }
                                else
                                {
                                    <button style="height: 50px;width: 500px;background-color: #d91d2a;border-radius:10px 10px 10px 10px;"><a href="/Watch/WatchPage?id=@Model.IDP&tap=1"><p style="font-size:23px;">Watch Movie</p></a></button>
                                }
                            </div>

                        </div>
                        <div style="border: 6px solid cadetblue ;border-radius: 15px;height: 600px; width: 440px;margin-left: 10px; ">
                            <div style="background-color: #413e3e; height: 50px;width: 440px; border-radius:10px 10px 0px 0px ;">
                                <p style="font-size:35px; color: #f2a223; text-align: center;">@Model.TenPhim</p>
                            </div>
                            <div style=" height: 200px;width: 440px; display: Flex;margin-top: 10px;">
                                <div style="background-color: #413e3e;width: 140px;">
                                    <img src="@Model.Anhdienvien" alt="" style="height: 200px;width: 120px; margin-left:10px;" />
                                </div>
                                <div style="background-color: #413e3e; width: 290px;margin-left: 10px;">
                                    <p style="font-size:17px; color: #eee; margin-top: 10px;margin-left: 10px;">
                                        Trạng thái:Hoàn tất
                                        <br>
                                        @{
                                            string timepo = Model.timePost.ToString();
                                            string[] arr = timepo.Split(' ');
                                            string time = arr[0];
                                        }
                                        Ngày ra rạp:@time
                                        <br>
                                        Chất lượng:HD không che
                                        <br>
                                        Ngôn ngữ:Phụ đề Việt / thuyết minh
                                        <br>
                                        Thể loại:@Model.TheLoai
                                        <br>
                                        Diễn Viên Chính:<a href="/SearchByActor/Actor?name=@Model.DienVien">@Model.DienVien</a>
                                    </p>
                                </div>
                            </div>
                            <div style="background-color: #413e3e; height: 270px;width: 440px;margin-top: 10px;">
                                <p style="margin-top: 10px;margin-left: 10px;">@Model.MoTa</p>
                            </div>
                            <div style="margin-top: 10px; background-color: #413e3e;height: 50px;width: 440px;display: Flex; border-radius:0 0 10px 10px;">
                                <div style="margin-left: 220px;margin-top: 10px;">
                                    <img src="~/Assets/Admin/css/images/file.png" style="height: 30px;height: 30px;" />@Model.luotView
                                </div>
                                <div style="margin-left: 10px;margin-top:10px;">
                                    <img src="~/Assets/Admin/css/images/chat.png" style="height: 30px;height: 30px;" />@ViewBag.countComment
                                </div>
                                <div style="margin-left: 10px;margin-top:10px;">
                                    <img src="~/Assets/Admin/css/images/heart.png" style="height: 30px;height: 30px;" />@ViewBag.count
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <h1 style="color: #F2A223">Trailer</h1>
                        <iframe width="970" height="450" src="@Model.Trailer" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                    <div class="box">
                        <div class="head">
                            <h2>MOST COMMENTED</h2>
                            <p class="text-right"><a href="#">See all</a></p>
                        </div>
                        @{
                            List<DatabaseProvide.Phim> list = HttpContext.Current.Session["mostcommented"] as List<DatabaseProvide.Phim>;
                            foreach (var item in list)
                            {
                                <div class="movie">
                                    <div class="movie-image"> <a href="/Detail/DetailPage?idone=@item.IDP"> <span class="play"><span class="name">@item.TenPhim</span></span><img src="@item.Poster" alt="" /></a> </div>
                                    <div>
                                        <p style="text-align:center; font-size:14px;">@item.TenPhim</p>
                                        <br><br>
                                    </div>
                                </div>
                            }
                        }
                        <div class="cl">&nbsp;</div>
                    </div>
                </div>
                <div class="cl">&nbsp;</div>
            </div>
            <div id="footer" style="margin-top:150px;">
                <p class="lf">Copyright &copy; 2010 <a href="#">SiteName</a> - All Rights Reserved</p>
                <p class="rf">Design by <a href="mailto:hung6nuh@gmail.com/">Nguyen Xuan Hung</a></p>
                <div style="clear:both;"></div>
            </div>
        </div>
    </div>
    <!-- END PAGE SOURCE -->


</body>
</html>

